<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_paper"
    tools:context="edu.orangecoastcollege.cs273.bnguyen336.shippingcalculator.MainActivity"
    android:id="@+id/shippingRelativeLayout"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Weight of the package"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/weightEditText"
        android:selectAllOnFocus="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_below="@+id/textView"
        android:textColor="@android:color/transparent"
        android:cursorVisible="false"
        android:layout_above="@+id/textView4"
        android:backgroundTint="@color/accent_material_light">
    <requestFocus/>
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/weightTextView"
        android:padding="5dp"
        android:textSize="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(in ounces)"
        android:id="@+id/textView4"
        android:textColor="#5d5b5b"
        android:layout_below="@+id/weightTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Base Cost:"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Added Cost:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Total Shipping-Cost:"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:paddingLeft="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$3.00"
        android:id="@+id/baseCostTextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:singleLine="false"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView4"
        android:gravity="right"
        android:paddingRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/addedCostTextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_below="@+id/baseCostTextView"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:paddingRight="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$0.00"
        android:id="@+id/totalTextView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingRight="20dp"
        android:layout_below="@+id/addedCostTextView"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"/>

</RelativeLayout>
